{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build debug",
			"command": "cd ct && ./build_ct.sh -DCMAKE_BUILD_TYPE=DEBUG -DBUILD_EXAMPLES=true",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "build release",
			"command": "cd ct && ./build_ct.sh -DCMAKE_BUILD_TYPE=RELEASE -DBUILD_EXAMPLES=true",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"problemMatcher": []
		}
	]
}